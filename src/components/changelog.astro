---
import ContentSection from "~/components/content-section.astro";
import { marked } from "marked";
import { GitHubReleases } from "~/scripts/github";

// grab all releases
const releases = await GitHubReleases.all("lemonpole/liga-public");
---

<ContentSection title="Release Notes" id="changelog">
  <article class="grid w-full grid-cols-1 gap-6 md:w-2/3">
    {
      releases.map((release) => (
        <aside class="prose max-w-none" set:html={marked.parse(release.body)} />
      ))
    }
  </article>
</ContentSection>
